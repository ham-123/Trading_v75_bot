# Dockerfile pour Streamlit Interface
FROM python:3.11-slim

WORKDIR /app

# Installer les d√©pendances syst√®me
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copier les requirements
COPY dashboard/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# üÜï AJOUTER: Copier aussi les donn√©es n√©cessaires
COPY dashboard/app.py .
COPY data/ ./data/
COPY logs/ ./logs/

# Cr√©er les dossiers
RUN mkdir -p data logs

# Configuration Streamlit
RUN mkdir -p ~/.streamlit
RUN echo '[server]\nport = 8501\naddress = "0.0.0.0"\nheadless = true\nenableCORS = false\nenableXsrfProtection = false\n' > ~/.streamlit/config.toml

# Exposer le port
EXPOSE 8501

# Commande de d√©marrage
CMD ["streamlit", "run", "app.py", "--server.port=8501", "--server.address=0.0.0.0"]